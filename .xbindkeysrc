#Volume Up
"pamixer --increase 5 --allow-boost"
   XF86AudioRaiseVolume

#Volume Down
"pamixer --decrease 5 --allow-boost"
   XF86AudioLowerVolume

#Mute Limit
"pamixer --toggle-mute; pamixer --increase 0"
   XF86AudioMute

#Mute
"pamixer --toggle-mute"
   Shift + XF86AudioMute

#Music
"spotify"
   XF86Tools

#Previous
"playerctl previous"
   XF86AudioPrev

#Next
"playerctl next"
   XF86AudioNext

#Play/Pause
"playerctl play-pause"
   XF86AudioPlay

#Stop
"playerctl stop"
   XF86AudioStop

#Copy
"xvkbd -xsendevent -text '\[XF86Copy]'"
   b:8

#Paste
"xvkbd -xsendevent -text '\[XF86Paste]'"
   b:9

#Printscreen
"printscreen"
   Print

#File screenshot
"fshot"
   Shift + Print

#File printscreen
"fshots"
   Control+Shift+Print

#Shutdown
"gksudo -D "Shutdown" -m "Shutdown?" shutdown now"
   Control+Shift+Alt+Mod4 + XF86Calculator

#Displays
"ddisplay"
   XF86Display

#No redshift
"redshift -x; killall redshift"
   Mod4 + e

#Redshift
"redshift -x; redshift -O 3000"
   Mod4 + r

#File manager
"nemo"
   XF86Launch1

#Clipyt
"clipyt"
   Mod4 + c

#Nemo
"nemo"
   XF86Calculator

#Lock
"lock"
   Mod4 + l

#Search
"surfcls floating duckduckgo.com"
   Mod4 + f

#Wikipedia search
"wiki"
   Mod4 + w

#Pavucontrol
"pavucontrol --class floating"
   Control + XF86AudioRaiseVolume

#
# End of xbindkeys configuration
