#Volume Up
"pamixer --increase 5"
   XF86AudioRaiseVolume

#Volume Down
"pamixer --decrease 5 --allow-boost"
   XF86AudioLowerVolume

#Volume Up +
"pamixer --increase 5 --allow-boost"
   Control+XF86AudioRaiseVolume

#Mute
"pamixer --toggle-mute"
   XF86AudioMute

#Music
"spotify"
   XF86Tools

#Previous
"playerctl previous"
   XF86AudioPrev

#Next
"playerctl next"
   XF86AudioNext

#Play/Pause
"playerctl play-pause"
   XF86AudioPlay

#Remark
"urxvt"
   XF86Calculator

#Suspend
"sudo pm-suspend"
   Control+Shift+Alt+Mod4 + XF86Calculator

#Copy
"xvkbd -xsendevent -text '\[XF86Copy]'"
   b:8

#Paste
"xvkbd -xsendevent -text '\[XF86Paste]'"
   b:9

#Printscreen
"printscreen"
   Print

