# Backup
mkdir ~/olddotfiles
mv ~/.inputrc ~/.vimrc ~/.vim ~/.Xresources ~/olddotfiles/

# inputrc
ln -s ~/git/dofiles/.inputrc ~/

# Vim
ln -s ~/git/dotfiles/.vimrc ~/
mkdir ~/.vim
ln -s ~/git/dotfiles/.vim/ftplugin ~/.vim/
mkdir ~/.vim/colors
ln -s ~/git/solarized/vim-colors-solarized/colors/solarized.vim ~/.vim/colors/
# Install vim-plug
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# .Xresources
cp ~/git/dotfiles/.Xresources ~/
cat ~/git/solarized/xresources/solarized >> ~/.Xresources
xrdb -merge ~/.Xresources

