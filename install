# Backup
mkdir ~/olddotfiles
mv ~/.inputrc ~/.vimrc ~/.vim ~/.Xresources ~/olddotfiles/

# inputrc
ln -s ~/dofiles/.inputrc ~/

# Vim
ln -s ~/dotfiles/.vimrc ~/
mkdir ~/.vim
ln -s ~/dotfiles/.vim/ftplugin ~/.vim/
mkdir ~/.vim/colors
ln -s ~/solarized/vim-colors-solarized/colors/solarized.vim ~/.vim/colors/
# Install vim-plug
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# Konsole
ln -s ~/dotfiles/PaperColor.colorscheme ~/.local/share/konsole/
